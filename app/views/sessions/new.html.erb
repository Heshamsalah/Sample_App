<div class="container">
  <h2>Login</h2>
  <%= form_for(:user, url: sessions_path) do |f| %>
  <div class="col-md-4">
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label "password" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="action">
      <%= f.submit "login", class: "btn btn-md btn-primary"%>
    </div>
  </div>
  <% end %>

</div>
