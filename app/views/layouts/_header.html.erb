<header class="navbar navbar-fixed-top navbar-inverse"> <!-- <header> is an HTML5 div, as well as nav and section -->
  <div class="container">
    <%= link_to "Social Network", root_path, id: "logo" %>
    <nav>
      <ul class="nav nav-pills navbar-nav navbar-left">
        <li>
          <% if logged_in? %>
          <%= gravatar_for(current_user,50) %>
          <% end %>
        </li>
        <li>
          <% if logged_in? %>

          <%= link_to "#{profile_username}", current_user %>
          <% end %>
        </li>
        <li><%= link_to "Home", root_path %></li>

        <li>
          <% if logged_in? %>
            <%= link_to "Logout", logout_path, method: :delete %>
          <% else %>
            <%= link_to "Login", login_path %>
          <% end %>
        </li>
        <li><%= link_to "Help", help_path %></li>
      </ul>
    </nav>
  </div>
</header>
