<header class="navbar navbar-fixed-top navbar-inverse"> <!-- <header> is an HTML5 div, as well as nav and section -->
  <div class="container">
    <%= link_to "Social Network", root_path, id: "logo" %>
    <nav>
      <ul class="nav nav-pills navbar-nav navbar-left">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li> <%= gravatar_for(current_user,50) %> </li>
              <li> <%= link_to "#{profile_username}", current_user %> </li>
              <li> <%= link_to "Settings", '#' %> </li>
              <li class="divider"></li>
              <li> <%= link_to "Logout", logout_path, method: :delete %> </li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to "Login", login_path %>  </li>
        <% end %>

        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
      </ul>
    </nav>
  </div>
</header>
